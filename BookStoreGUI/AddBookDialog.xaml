<Window x:Class="BookStoreGUI.AddBookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreGUI"
        mc:Ignorable="d"
        Title="AddBookDialog" Height="auto" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Margin="2" Content="ISBN" />
        <TextBox Name="isbnTextBox" Grid.Column="1" Grid.Row="0" Margin="2"/>

        <Label Grid.Column="0" Grid.Row="1" Margin="2" Content="Category" />
        <TextBox Name="categoryTextBox" Grid.Column="1" Grid.Row="1" Margin="2"/>

        <Label Grid.Column="0" Grid.Row="2" Margin="2" Content="Title" />
        <TextBox Name="titleTextBox" Grid.Column="1" Grid.Row="2" Margin="2"/>

        <Label Grid.Column="0" Grid.Row="3" Margin="2" Content="Author" />
        <TextBox Name="authorTextBox" Grid.Column="1" Grid.Row="3" Margin="2"/>

        <Label Grid.Column="0" Grid.Row="4" Margin="2" Content="Price" />
        <TextBox Name="priceTextBox" Grid.Column="1" Grid.Row="4" Margin="2"/>

        <Label Grid.Column="0" Grid.Row="5" Margin="2" Content="SupplierID" />
        <TextBox Name="supplierIDTextBox" Grid.Column="1" Grid.Row="5" Margin="2"/>

        <Label Grid.Column="0" Grid.Row="6" Margin="2" Content="Year" />
        <TextBox Name="yearTextBox" Grid.Column="1" Grid.Row="6" Margin="2"/>

        <Label Grid.Column="0" Grid.Row="7" Margin="2" Content="Edition" />
        <TextBox Name="editionTextBox" Grid.Column="1" Grid.Row="7" Margin="2"/>

        <Label Grid.Column="0" Grid.Row="8" Margin="2" Content="Publisher" />
        <TextBox Name="publisherTextBox" Grid.Column="1" Grid.Row="8" Margin="2"/>

        <Label Grid.Column="0" Grid.Row="9" Margin="2" Content="In Stock" />
        <TextBox Name="inStockTextBox" Grid.Column="1" Grid.Row="9" Margin="2"/>

        <StackPanel Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="10" 
                    Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="okButton" Click="okButton_Click" IsDefault="True" 
                    MinWidth="80" Margin="0,10,5,5" Content="OK"/>
            <Button Name="cancelButton" Click="cancelButton_Click" IsDefault="True" 
                    MinWidth="80" Margin="40,10,5,5" Content="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
